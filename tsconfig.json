{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "declaration": true,
    "outDir": "dist",
    "lib": ["DOM", "ES6"],
    "moduleResolution": "node"
  },
  "include": ["src/ts/**/*"]
}
